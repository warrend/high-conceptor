<h1>Loglines</h1>
<%= render partial: 'logline', collection: @loglines %>

<script id="show-template" type="text/x-handlebars-template">

	<h1><strong>{{name}}'s Profile</strong></h1>
	<br>
	<p>{{bio}}</p>
	<ul>
  {{#each loglines}}
	  <div class="box" data-id="{{id}}">
		  <article class="media">
		    <div class="media-left">
		      <figure class="image is-64x64">
		        <img src="http://bulma.io/images/placeholders/128x128.png" alt="Image">
		      </figure>
		    </div>
		    <div class="media-content">
		      <div class="content">
		        <p>
		          <strong>{{../name}}</strong> <small>{{../email}}</small>
		          <br>
		          {{content}}
		        </p>
		        
						<div class="rate-form" data-id="{{id}}">
							<button class="button">Rate!</button>
						</div>

		      </div>
		    </div>
		  </article>
		</div>
	{{/each}}
	</ul>


	<a href="/">Back to Public Loglines</a>
</script>

<script id="form-template" type="text/x-handlebars-template">
	<form class="new_rating" id="new_rating" action="/ratings" accept-charset="UTF-8" method="post">
		<input name="utf8" type="hidden" value="âœ“">
		<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
		<input type="hidden" id="logline_id" name="rating[logline_id]" value="{{id}}">
		<input type="text" name="rating[rating]" id="rating_rating">
		<input type="submit" name="commit" value="Add Rating" data-disable-with="Add Rating">
	</form>
</script>






