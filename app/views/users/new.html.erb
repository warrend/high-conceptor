<%= form_for @user do |f| %>
  <%= f.text_field :name, placeholder: 'Name' %><br>
  <%= f.text_field :email, placeholder: 'Email' %><br>
  <%= f.password_field :password, placeholder: 'Password' %><br>
  <%= f.password_field :password_confirmation, placeholder: :password_confirmation %><br><br>
  <%= f.submit class: "btn btn-primary" %><br><br>
<% end %>
